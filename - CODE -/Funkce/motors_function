#include <Arduino.h>
#include "Wire.h"

#define motor_A_vpred 19
#define motor_A_vzad 18
#define motor_B_vpred 4
#define motor_B_vzad 2
#define STBI 23



#define pwm1 5
#define pwm2 15


void setup() {

  pinMode(motor_A_vpred, OUTPUT);
  pinMode(motor_A_vzad, OUTPUT);
  pinMode(motor_B_vpred, OUTPUT);
  pinMode(motor_B_vzad, OUTPUT);

  pinMode(pwm1, OUTPUT);
  pinMode(pwm2, OUTPUT);

  pinMode(STBI, OUTPUT);
}

void pohyb(char motor, int polarizace ){

  digitalWrite(STBI, HIGH);

  switch(motor){
    case 'A':

      digitalWrite(pwm1, HIGH);

      if(polarizace == 0){

        digitalWrite(motor_A_vpred, LOW);
        digitalWrite(motor_A_vzad, HIGH);

      }
      else{

        digitalWrite(motor_A_vpred, HIGH);
        digitalWrite(motor_A_vzad, LOW);
      }

    break;

    case 'B':

      digitalWrite(pwm2, HIGH);

      if(polarizace == 0){

        digitalWrite(motor_B_vpred, LOW);
        digitalWrite(motor_B_vzad, HIGH);

      }
      else{

        digitalWrite(motor_B_vpred, HIGH);
        digitalWrite(motor_B_vzad, LOW);
      }

    break;
  }

}

void loop() {

  pohyb('A',1);
  pohyb('B',0);

}
